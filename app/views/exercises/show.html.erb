<div class="page-header">
  <h1>Exercicio <small>Detalhes</small></h1>
  <div class="buttons">
    <%= link_to 'Editar', edit_exercise_path(@exercise), :class => 'btn btn-primary' %>
    <%= link_to 'Excluir', @exercise, method: :delete, :remote => false, data: { confirm: 'VocÃª deseja excluir o exercicio "' + @exercise.name + '"?', title: 'Excluir Exercicio' }, class: 'btn btn-danger' %>
