<div class="page-header">
  <h1>Aluno <small>Detalhes</small></h1>
  <div class="buttons">
    <%= link_to 'Editar', edit_student_path(@student), :class => 'btn btn-primary' %>
    <%= link_to 'Excluir', @student, method: :delete, :remote => false, data: { confirm: 'VocÃª deseja excluir o aluno "' + @student.name + '"?' }, class: 'btn btn-danger' %>
    <%= link_to 'Voltar', students_path, :class => 'btn btn-default' %>
  </div>
</div>
<div class="panel panel-default">
  <div class="panel-body">
    <p>
      <strong>Name:</strong>
      <%= @student.name %>
    </p>

    <p>
      <strong>Age:</strong>
      <%= @student.age %>
    </p>

    <p>
      <strong>Brithdate:</strong>
      <%= @student.birthday %>
    </p>

    <p>
      <strong>Phone:</strong>
      <%= @student.phone %>
    </p>

    <p>
      <strong>Cellphone:</strong>
      <%= @student.cellphone %>
    </p>

    <p>
      <strong>Observation:</strong>
      <%= @student.observation %>
    </p>
  </div>
</div>