<div class="page-header">
  <h1>Treino <small>Detalhes</small></h1>
  <div class="buttons">
    <%= link_to 'Editar', edit_training_path(@training), :class => 'btn btn-primary' %>
    <%= link_to 'Excluir', @training, method: :delete, :remote => false, data: { confirm: 'VocÃª deseja excluir o treino "' + @training.name + '"?' }, class: 'btn btn-danger' %>
    <%= link_to 'Voltar', trainings_path, :class => 'btn btn-default' %>
  </div>
</div>
<div class="panel panel-default">
  <div class="panel-body">
    <p>
      <strong>Name:</strong>
      <%= @training.name %>
    </p>
    <p>
      <strong>Series:</strong>
      <%= @training.series %>
    </p>
    <p>
      <strong>Repetitions:</strong>
      <%= @training.repetitions %>
    </p>
    <% if !@training.time.blank? %>
    <p>
      <strong>Time:</strong>
      <%= @training.time %>
    </p>
    <%end%>
    <p>
      <strong>Exercicios:</strong>
      <% @training.exercises.each do |exercise| %>
          <span><%= exercise.name %></span>
      <% end %>
    </p>
  </div>
</div>