<%= simple_form_for(@muscle_group) do |f| %>
    <div class="panel panel-default">
      <div class="panel-body">
        <% if @muscle_group.errors.any? %>
            <div class="alert alert-danger alert-dismissable">
              <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
              <p><strong><%= pluralize(@muscle_group.errors.count, "erro") %></strong> n√£o permiti salvar o grupo muscular.</p>
            </div>
        <% end %>

        <%= f.input :name, placeholder: 'Informe o nome do grupo muscular' %>
      </div>
      <div class="panel-footer" style="text-align: right;">
        <%= f.button :submit, class: 'btn-success' %>
         <%= link_to 'Cancelar', muscle_groups_path, :class => 'btn btn-default' %>
      </div>
    </div>
<% end %>

